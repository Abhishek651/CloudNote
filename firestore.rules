rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to read/write their own user profile
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Notes collection - enforce ownership
    match /notes/{noteId} {
      allow read: if request.auth.uid == resource.data.ownerId;
      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.ownerId
                    && request.resource.data.title is string
                    && request.resource.data.title.size() <= 200
                    && request.resource.data.content is string
                    && request.resource.data.content.size() <= 52428800
                    && (request.resource.data.tags is list || !('tags' in request.resource.data))
                    && (request.resource.data.folderId is string || request.resource.data.folderId == null)
                    && request.resource.data.isArchived is bool;
      allow update: if request.auth.uid == resource.data.ownerId
                    && (request.resource.data.title is string && request.resource.data.title.size() <= 200 || !('title' in request.resource.data))
                    && (request.resource.data.content is string && request.resource.data.content.size() <= 52428800 || !('content' in request.resource.data))
                    && (request.resource.data.tags is list || !('tags' in request.resource.data))
                    && (request.resource.data.folderId is string || request.resource.data.folderId == null || !('folderId' in request.resource.data))
                    && (request.resource.data.isArchived is bool || !('isArchived' in request.resource.data));
      allow delete: if request.auth.uid == resource.data.ownerId;
    }

    // Folders collection - enforce ownership and hierarchy
    match /folders/{folderId} {
      allow read: if request.auth.uid == resource.data.ownerId;
      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.ownerId
                    && request.resource.data.name is string
                    && request.resource.data.name.size() > 0
                    && request.resource.data.name.size() <= 100
                    && (request.resource.data.parentId is string || request.resource.data.parentId == null);
      allow update: if request.auth.uid == resource.data.ownerId
                    && (request.resource.data.name is string && request.resource.data.name.size() <= 100 || !('name' in request.resource.data))
                    && (request.resource.data.parentId is string || request.resource.data.parentId == null || !('parentId' in request.resource.data));
      allow delete: if request.auth.uid == resource.data.ownerId;
    }

    // Shared collection - for sharing notes with other users
    match /shared/{shareId} {
      allow read: if request.auth.uid == resource.data.sharedBy || request.auth.uid in resource.data.sharedWith;
      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.sharedBy
                    && request.resource.data.noteId is string
                    && request.resource.data.sharedWith is list
                    && request.resource.data.permissions is string;
      allow update: if request.auth.uid == resource.data.sharedBy;
      allow delete: if request.auth.uid == resource.data.sharedBy;
    }

    // Health check collection - allow backend writes only
    match /_health_check/{document=**} {
      allow write: if false; // Only backend service account can write via admin SDK
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
